<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.shi.com.sagy.Achivement_upload">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/AcUp_cam_img"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_menu_camera"
                    android:layout_marginLeft="50dp"/>

                <Button
                    android:id="@+id/AcUp_brows_btn"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/buttoncolor"
                    android:paddingLeft="20dp"
                    android:paddingRight="30dp"
                    android:text="Browse"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/AcUp_Image_img"
                android:layout_width="205dp"
                android:layout_margin="25dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="#c5e8f6"
                android:src="@drawable/ic_menu_gallery" />
            <EditText
                android:id="@+id/AcUp_title_edt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:background="@drawable/round_edittext"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Title"
                android:inputType="textPersonName"
                android:paddingTop="10dp"
                android:textColorHint="#FFFFFF"
                android:textSize="20sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/AcUp_desc_edt"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:background="#c5e8f6"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="2sp"
                    android:textColor="@color/colorAccent"
                    android:hint="Write description here!"
                    android:textColorHint="@color/colorAccent"
                    android:layout_margin="15dp"
                    android:gravity="center"/>

            </FrameLayout>
            <Button
                android:id="@+id/AcUp_submit_btn"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@color/buttoncolor"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                android:text="Submit"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"/>



        </LinearLayout>


    </ScrollView>
</android.support.constraint.ConstraintLayout>
