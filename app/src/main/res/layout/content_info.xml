<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.sih.com.villageinfo.infoActivity"
    tools:showIn="@layout/activity_info"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <TextView
        android:id="@+id/mp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="MP"
        android:layout_gravity="left"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/pincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Pincode"
        android:layout_gravity="left"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/population"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="population"
        android:layout_gravity="left"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/male"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="males"
        android:layout_gravity="left"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/female"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="females"
        android:layout_gravity="left"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/hospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Hospitals"
        android:layout_gravity="left"
        android:textSize="20sp" />
    <!--<TextView
        android:id="@+id/area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Area"
        android:layout_gravity="left"
        android:textSize="20sp" />-->

    <TextView
        android:id="@+id/school_children"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="School-children"

        android:textSize="20sp" />
    <TextView
        android:id="@+id/school_male"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="school_male"

        android:textSize="20sp" />
    <TextView
        android:id="@+id/school_female"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="school_male"

        android:textSize="20sp" />


</LinearLayout>
</android.support.v4.widget.NestedScrollView>
